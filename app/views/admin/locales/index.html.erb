<h1>Listing locales</h1>

<table>
  <tr>
    <th>ISO name</th>
    <th>Language code</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% for locale in @locales %>
  <tr>
    <td><%=h locale.iso %></td>
    <td><%=h locale.short %></td>
    <td><%= "Main" if locale.main? %></td>
    <td><%= link_to 'Edit', edit_admin_locale_path(locale) %></td>
    <td><%= link_to 'Destroy', admin_locale_url(locale), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New locale', new_admin_locale_path %>